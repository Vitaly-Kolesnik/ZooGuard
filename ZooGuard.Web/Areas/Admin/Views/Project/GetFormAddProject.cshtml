@model AddProjectViewModel
@{
    ViewData["Title"] = "Add Project";
}
<form asp-area="admin" asp-controller="Project" asp-action="AddProject" method="post" class="mt-5">
  <div class="form-row mb-0">
    <div class="form-group col-auto">
      <label asp-for="Name" for="inputName"></label>
      <input asp-for="Name" type="text" class="form-control" id="inputOrgForm" placeholder="OOO">
    </div>
    </div>
  <div class="form-group col-md-4 pl-0">
      <label asp-for="CompanyId" for="inputCompany"></label>
      <select asp-for="CompanyId" asp-items="Model.Companies" id="inputState" class="form-control">
      </select>
      <span asp-validation-for="CompanyId" class="text-danger"></span>
    </div>
<button type="submit" class="btn btn-info">Add Project</button>
</form>