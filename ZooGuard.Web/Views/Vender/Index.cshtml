@model IList<ZooGuard.Core.Entities.Vender>
@{
    ViewData["Title"] = "GetAllVendersInDataBase"; @*Установление ключа Title для контроллера*@
}

<div class="text-center">
    <h3>Venders</h3>
</div>
 
<div class="form-group">
    <input type="submit" value="Add Vender" class="btn btn-primary" />
</div>
<table class="table">
	<thead>
		<tr>
			<th>Company</th>
			<th>First name</th>
			<th>Last name</th>
			<th>Phone</th>
			<th>E-mail</th>
			<th>All positions</th>
			<th>Edit user</th>
            <th>Delete user</th>
		</tr>
	</thead>
	<tbody>
		@foreach (ZooGuard.Core.Entities.Vender allVenders  in Model) {
        <tr>
			<td>@allVenders.Name</td>
			<td>@allVenders.FirstNameRepresentative</td>
			<td>@allVenders.LastNameRepresentative</td>
			<td>@allVenders.PhoneRepresentative</td>
			<td>@allVenders.EmailRepresentative</td>
			<td><input type="submit" value="all Positions" class="btn btn-primary" /></td>
			<td><input type="submit" value="Edit" class="btn btn-primary" /></td>
			<td><input type="submit" value="Delete" class="btn btn-primary" /></td>
		</tr>
        }
	</tbody>
</table>
