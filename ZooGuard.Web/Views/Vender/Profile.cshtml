@model VenderViewModel
@{
    ViewData["Title"] = "GetProfileVenderById";
}
<div class="text-center">
    <h3>@Model.Name</h3>
</div>

<div class="form-group">
    <input type="submit" value="Edit Vender" class="btn btn-primary" /> <input type="submit" value="Delete Vender" class="btn btn-primary" />
</div>
<table class="table">
	<thead>
		<tr>
		<th>First Name:</th><td>@Model.FirstNameRepresentative</td>
		</tr>
		<tr>
		<th>Last Name:</th><td>@Model.LastNameRepresentative</td>
		</tr>
		<tr>
		<th>Phone:</th><td>@Model.PhoneRepresentative</td>
		</tr>
		<tr>
		<th>Email:</th><td>@Model.EmailRepresentative</td>
		</tr>
		<tr>
		<th>Adress:</th><td>@Model.MailingAddress</td>
		</tr>
		<tr>
		<th>About vender:</th><td>@Model.Сomment</td>
		</tr>
	</thead>	
</table>