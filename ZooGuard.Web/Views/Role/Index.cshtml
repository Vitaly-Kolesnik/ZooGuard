@model IList<ZooGuard.Core.Entities.Role>
@{
    ViewData["Title"] = "GetAllRolesInDataBase";
}

<div class="text-center">
    <h3>Roles</h3>
</div>
 
<div class="form-group">
    <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="GetFormAddRole"><input type="submit" value="Add Role" class="btn btn-primary" /></a>
</div>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
            <th>Delete Role</th>
		</tr>
	</thead>
	<tbody>
		@foreach (ZooGuard.Core.Entities.Role role in Model) {
        <tr>
			<td>@role.Name</td>
			<td><a href="~/Role/Delete/@role.Id"/><input type="submit" value="Delete" class="btn btn-primary" /></td>
		</tr>
        }
	</tbody>
</table>
