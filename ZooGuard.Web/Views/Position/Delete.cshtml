@model PositionViewModel
@{
	ViewData["Title"] = "Delete";
}
<div class="text-center">
    <h3>Delete @Model.Name</h3>
</div>

<div class="form-group">
	<table>
		<tr>
		<form method="post" asp-route-id="@Model.Id" asp-controller="Position" asp-action="DeletePosition">
		<th><input type="submit" value="Yes" class="btn btn-primary"/></th> 
		</form>
		<td><a class="nav-link text-dark" asp-area="" asp-controller="Position" asp-action="GetAllPositionsInDataBase"/><input type="submit" value="No" class="btn btn-primary"/></td>
		</tr>
	</table>
</div>