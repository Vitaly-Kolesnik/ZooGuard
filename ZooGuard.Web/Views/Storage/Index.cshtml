@model IList<ZooGuard.Core.Entities.Storage>
@{
    ViewData["Title"] = "GetAllStoragesInDataBase"; @*Установление ключа Title для контроллера*@
}

<div class="text-center">
    <h3>Storages</h3>
</div>
 
<div class="form-group">
    <input type="submit" value="Add User" class="btn btn-primary" />
</div>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Adress</th>
            <th>Category</th>
			<th>Edit storage</th>
            <th>Delete storage</th>
		</tr>
	</thead>
	<tbody>
		@foreach (ZooGuard.Core.Entities.Storage allStorages  in Model) {
        <tr>
			<td>@allStorages.Name</td>
			<td>@allStorages.ActualAddress</td>
            <td>@allStorages.Characteristic</td>
          <td><input type="submit" value="Edit" class="btn btn-primary" /></td>
          <td><input type="submit" value="Delete" class="btn btn-primary" /></td>
		</tr>
        }
	</tbody>
</table>
