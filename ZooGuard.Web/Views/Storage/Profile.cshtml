@model StorageViewModel
@{
    ViewData["Title"] = "GetProfileStorageById";
}
<div class="text-center">
    <h3>@Model.Name</h3>
</div>

<div class="form-group">
    <table>
		<tr>
		<td><a href="~/Storage/Edit/@Model.Id"/><input type="submit" value="Edit Vender" class="btn btn-primary"/></td>
		<td><a href="~/Storage/Delete/@Model.Id"/><input type="submit" value="Delete Vender" class="btn btn-primary" /></td>
		</tr>
	</table>
</div>
<table class="table">
	<thead>
		<tr>
		<th>Adress:</th><td>@Model.ActualAddress</td>
		</tr>
		<tr>
		<th>Category:</th><td>@Model.Characteristic</td>
		</tr>
		<tr>
		<th>Positions:</th><td><input type="submit" value="all Positions" class="btn btn-primary" /></td>
		</tr>
	</thead>	
</table>
