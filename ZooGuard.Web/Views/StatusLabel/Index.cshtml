@model IList<ZooGuard.Core.Entities.InfoAboutPos.StatusLabelPos> 
@{
    ViewData["Title"] = "GetAllLabelInDataBase";
}

<div class="text-center">
    <h3>Status Label</h3>
</div>
 
<div class="form-group">
    <a class="nav-link text-dark" asp-area="" asp-controller="StatusLabel" asp-action="GetFormAddStatus"><input type="submit" value="Add Status Label" class="btn btn-primary" /></a>
</div>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
            <th>Delete Label</th>
		</tr>
	</thead>
	<tbody>
		@foreach (ZooGuard.Core.Entities.InfoAboutPos.StatusLabelPos label in Model) {
        <tr>
			<td>@label.Name</td>
			<td><a href="~/Status/Delete/@label.Id"/><input type="submit" value="Delete" class="btn btn-primary" /></td>
		</tr>
        }
	</tbody>
</table>
